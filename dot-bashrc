# Read at start up by interactive non-login instances of Bash.

if [ -z "$SSH_CLIENT" ]
then
  # Local shell.
  PS1='\W \$ '
else
  # Remote shell.
  PS1='\u@\h:\W \$ '
fi

PATH=$HOME/bin:/usr/local/bin:$PATH

export BLOCKSIZE=1g
export EDITOR=emacs
export GREP_COLOR='1;33'
export GREP_OPTIONS='-n --color=auto'
export HISTCONTROL=erasedups

###
# Aliases
#
alias df='df -h'
alias du='du -h -d 2'
alias grep='zegrep'
alias la='ls -aFG'
alias le='ls -le'
alias ll='ls -l@hoF'
alias ls='ls -FG'

###
# Git Support
#
alias curlga='curl $@ | git apply --index'

###
# Drupal Support
#

# Drush 7 aliases and the like
if [ -f $HOME/.drush/drush.bashrc ] ; then
  source $HOME/.drush/drush.bashrc
fi

if [ -f $HOME/.bashrc.`hostname -s` ] ; then
  source $HOME/.bashrc.`hostname -s`
fi
